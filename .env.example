# Stock/Crypto Recommender Environment Variables
# Copy this file to .env and customize as needed

# Analyst settings
RECOMMENDER_MIN_ANALYSTS=10
RECOMMENDER_MAX_ANALYSTS=15

# Recommendation weights (must sum to 1.0)
RECOMMENDER_ANALYST_WEIGHT=0.5
RECOMMENDER_BETTING_WEIGHT=0.25
RECOMMENDER_NEWS_WEIGHT=0.25

# Output settings
RECOMMENDER_TOP_N=10
RECOMMENDER_VERBOSE=true
